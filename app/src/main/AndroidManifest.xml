<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ba.edu.ibu.stu">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.READ_CALENDAR"/>
    <uses-permission android:name="android.permission.WRITE_CALENDAR"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:label="QuizGame"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="ba.edu.ibu.stu.activities.PlayQuizActivity"></activity>
        <activity android:name="ba.edu.ibu.stu.activities.AddCategoryActivity" />
        <activity android:name="ba.edu.ibu.stu.activities.AddQuestionActivity" />
        <activity android:name="ba.edu.ibu.stu.activities.AddQuizActivity" />
        <activity android:name="ba.edu.ibu.stu.activities.QuizzesActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>